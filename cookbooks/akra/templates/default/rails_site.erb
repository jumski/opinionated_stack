
upstream <%= @name %>_unicorn {
  server unix:<%= @socket_path %>;
}

# main server block
server {
  listen 80;
  server_name <%= @main_domain %>;
  client_max_body_size 30M;

  keepalive_timeout 5;

  root <%= @root %>;

  location ~* \.(jpeg|jpg|gif|png|ico|css|bmp|js)$ {
    root /home/epics/current/public;
    gzip_static on;
    expires max;
    add_header Cache-Control public;
    add_header ETag "";
    break;
  }

  location / {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    # If you don't find the filename in the static files
    # Then request it from the unicorn server
    proxy_pass http://<%= @name %>_unicorn;
    break;
  }

  error_page 500 502 503 504 /500.html;
  location = /500.html {
    root <%= @root %>;
  }

}

<% @redirect_domains.each do |domain| %>
# redirect <%= domain %> to <%= @main_domain %>
server {
  listen 80;
  server_name <%= domain %>;
  rewrite ^ $scheme://<%= @main_domain %>$uri permanent;
}
<% end %>

